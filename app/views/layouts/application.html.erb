<!DOCTYPE html>
<html>
  <head>
    <title>Project</title>
    <%= stylesheet_link_tag "application", :media => "all" %> <%=
    javascript_include_tag "application" %> <%= csrf_meta_tags %>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--Bootstrap-->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <header>
      <nav class="navbar nav-top navbar-expand-sm navbar-dark">
        <div class="container-fluid py-2">
          <a class="navbar-brand text-center" href="/">
            <img
              src="/img/workout-icon.jpeg"
              alt="logo"
              width="40"
              height="40"
              class="d-inline-block brand-logo"
            />
            Dynamics
          </a>
          
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link navlink-top" href="/">Home</a>
              </li>
              
              <% if user_signed_in? %>
              <li class="nav-item">
                <a class="nav-link navlink-top" href="/activities">Activities</a>
              </li>
              <li class="nav-item">
                <a class="nav-link navlink-top" href="/activities/new">Log New Activity</a>
              </li>
              <li class="nav-item">
                <%= link_to "Sign Out", destroy_user_session_path, method: :get , class:"nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Edit Profile", edit_user_registration_path ,
                class:"nav-link" %>
              </li>

              <% else %>
              <li class="nav-item">
                <%= link_to "Sign Up", new_user_registration_path ,
                class:"nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign In", new_user_session_path , class:"nav-link"
                %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
    <% end %> <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
    <% end %> <%= yield %>

    <footer>
      <nav class="navbar navbar-expand fixed-bottom">
        <div class="container-fluid justify-content-center py-2">
          <div class="row">
          <div class="col-12 text-center social-box">
          <ul class="navbar-nav justify-content-center">
              <li class="nav-item">
                <a class="nav-link social-icon" aria-current="page" href="https://facebook.com" target="_blank">
                  <i class="bi bi-facebook"></i>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link social-icon" aria-current="page" href="https://twitter.com" target="_blank">
                  <i class="bi bi-twitter"></i>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link social-icon" aria-current="page" href="https://instagram.com" target="_blank">
                  <i class="bi bi-instagram"></i>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link social-icon" aria-current="page" href="https://tiktok.com" target="_blank">
                  <i class="bi bi-tiktok"></i>
                </a>
              </li>
            </ul>
          </div>
          <div class="col-12 text-center copyrights-box">
          <p class="copyrights">Copyrights Â© Dynamics</p>
          </div>
          </div>
            
          </div>
        </div>
      </nav>
    </footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

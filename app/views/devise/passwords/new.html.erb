<div class="container forgotpwd-container">
  <div class="row justify-content-center">
    <div class="col-4 text-center forgotpwd-box">
      <h2 class="forgotpwd-title">Forgot your password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field forgotpwd-txt">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="actions reset-btn">
          <%= f.submit "Send me reset password instructions" , class:"btn btn-outline-light" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

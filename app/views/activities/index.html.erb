<section>
  <h1 class="main-title-activities">Activities</h1>
  <div class="container">
    <table class="table table-dark table-striped text-center align-middle">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Activity Name</th>
          <th scope="col">Duration</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @activities.each do |activity|%>
          <tr>
            <td scope="col"> <%= activity.datetime %></td>
            <td scope="col"> <%= activity.name %></td>
            <td scope="col"> <%= activity.duration %>mins</td>
            <td scope="col"><%= link_to "Edit", edit_activity_path(activity), class:"btn btn-primary btn-small" %>
              <%= link_to "Delete", activity_path(activity), class:"btn btn-danger btn-small", method: :delete, data: {confirm: "are you sure ?"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
